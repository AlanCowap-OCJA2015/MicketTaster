import java.util.ArrayList;

public class Event{
	
	private EventName event;
	private ArrayList<Ticket> tickets;
	private int numTickets65 = 60_000;
	private int numTickets100 = 20_000;

	public Event(EventName event){
		this.event = event;
	}
  
  public void setTickets(ArrayList<Ticket> tickets, int price){
    this.tickets.addAll(tickets);
    if(price == 65){
      numTickets65 -= tickets.size();
    }else if(price == 100){
      numTickets100 -= tickets.size();
    }
  }

	public int getNumTickets65(){
		return numTickets65;	
	}

	public int getNumTickets100(){
		return numTickets100;
	}
	
	public EventName getEventName(){
		return event;
	}
}
